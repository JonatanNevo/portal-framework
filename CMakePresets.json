{
  "version": 6,
  "configurePresets": [
    {
      "name": "base",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_CONFIGURATION_TYPES": "Debug;Development;Release"
      }
    },
    {
      "name": "ninja-multi",
      "inherits": "base",
      "generator": "Ninja Multi-Config"
    },
    {
      "name": "xcode",
      "inherits": "base",
      "generator": "Xcode",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "vs2022",
      "inherits": "base",
      "generator": "Visual Studio 17 2022",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "ninja-multi",
      "configuration": "Debug"
    },
    {
      "name": "development",
      "configurePreset": "ninja-multi",
      "configuration": "Development"
    },
    {
      "name": "release",
      "configurePreset": "ninja-multi",
      "configuration": "Release"
    }
  ]
}
