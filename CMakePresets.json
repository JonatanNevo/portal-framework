{
  "version": 9,
  "configurePresets": [
    {
      "name": "base",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_CONFIGURATION_TYPES": "Debug;RelWithDebInfo;Release"
      }
    },
    {
      "name": "ninja-multi",
      "inherits": "base",
      "generator": "Ninja Multi-Config"
    },
    {
      "name": "ninja-multi-linux",
      "inherits": "base",
      "generator": "Ninja Multi-Config",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "environment": {
        "CC": "clang",
        "CXX": "clang++",
        "VCPKG_KEEP_ENV_VARS": "CC;CXX"
      }
    },
    {
      "name": "xcode",
      "inherits": "base",
      "generator": "Xcode",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "vs2022",
      "inherits": "base",
      "generator": "Visual Studio 17 2022",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "vs2026",
      "inherits": "base",
      "generator": "Visual Studio 18 2026",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "ninja-multi",
      "configuration": "Debug"
    },
    {
      "name": "development",
      "configurePreset": "ninja-multi",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "release",
      "configurePreset": "ninja-multi",
      "configuration": "Release"
    }
  ],
  "testPresets": [
    {
      "name": "test-release",
      "configurePreset": "ninja-multi",
      "configuration": "Release"
    }
  ]
}
